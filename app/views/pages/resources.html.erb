              </div>

              <!--End mc_embed_signup-->
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe"
                  class="button btn btn-primary"></div>
              </form>
            </div>
          </div>
        </div>
      </div>

    </div>
    <% end %>


    <h2>Discussion, Comments or Recommend New Resources</h2>
    <p>Resources will be reviewed and only ones that appear to be based on scientific facts and that are from credible
      sources will be added to the site. </p>
    <div id="disqus_thread"></div>
    <script>

      var disqus_config = function () {
        this.page.url = 'https://www.covid-updates.ca/resources';
        this.page.identifier = 'resources';
      };

      (function () { // DON'T EDIT BELOW THIS LINE
        var d = document, s = d.createElement('script');
        s.src = 'https://covidupdates.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
      })();
    </script>



    <% if false %>
    <div class="col-md-4">
      <p>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
          Get Emailed When A New Video Is Posted
        </button>
      </p>
    </div>
    <% end %>

  </div>
  <!-- /.container -->
</main>

<!-- Footer -->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">We are in this together.</p>
    <p class="m-0 text-center text-white"><a href="mailto:feedback@covid-updates.ca">feedback@covid-updates.ca</a> </p>
    <p>
      <div class="fb-share-button" data-href="https://www.covid-updates.ca/resources" data-layout="button_count"
        data-size="large"><a target="_blank"
          href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.covid-updates.ca%2F&amp;src=sdkpreparse"
          class="fb-xfbml-parse-ignore">Share</a></div>
    </p>
  </div>
  <!-- /.container -->
</footer>



