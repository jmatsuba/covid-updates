<% content_for :head do %>
<title>Recommended Science Based Resources for COVID-19 (Novel Coronavirus)</title>
<meta property="og:url" content="https://www.covid-updates.ca/resources" />
<meta property="og:title" content="Recommended, Science Based, Videos and Articles on COVID-19 (Novel Coronavirus)" />
<meta property="og:description"
  content="Get Informed. Save Lives. Resources to get you caught up on what is happening with COVID-19." />
<meta property="og:image" content="<%= image_url('resources_open_graph.png') %>" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<% end %>


<div id="fb-root"></div>
<script async defer crossorigin="anonymous"
  src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v6.0&appId=3276604539040033&autoLogAppEvents=1"></script>

<% if true %>
<!-- Navigation -->
<%= render partial: 'navbar', locals: { active: 'RES' } %>
<% end %>

<main>
  <!-- Header -->
  <header class="bg-primary py-5 mb-5">
    <div class="container h-100">
      <div class="row h-100 align-items-center">
        <div class="col-lg-12">
          <h1 class="display-4 text-white mt-4 mb-1">Recommended COVID-19 Resources</h1>
          <p class="lead mb-5 text-white-50">A curated list of videos, articles and websites that are relevant during
            this
            crisis. <br> <br>
            Some of these resources are not issued by a accredited health authority. Please be sure to form your own
            opinion on the validity
            of the information they contain.</p>
        </div>
      </div>
    </div>
  </header>

  <!-- Page Content -->
  <div class="container">
    <% Category.where(kind: 'general').order(:priority).each do |category| %>
      <% if category.resources.present? %>
        <div class="row">
          <div class="col-md-12">
            <h2><%= category.name %></h2>
          </div>
          <% category.resources.where(status: 'approved').each do |resource| %>
            <%= render partial: 'resource-card', locals: { resource: resource } %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="container">

    <hr>

    <div class="col-md-12">
      <h2>Do you have resources?</h2>
      <p>
        If you have resources that you'd like to contribute, you can <a href="/suggest-resource">submit them through the
          suggestion form</a>.
      </p>
    </div>

    <% if true %>
    <hr>
    <div class="col-md-12">
      <h2>Want to Help?</h2>
      <p>
        Right now I'm building and maintaining this site as a free solo side project. Updates are limited to
        AB/BC/ON/National Updates
        right now as I live in Vancouver, and only have time to update this content. However, It would be helpful to
        have
        someone from each province updating their content. The intention is to provide this site free of charge as a
        community resource.
      </p>
      <p>
        I am looking for people who can help build content and responsibly promote the site.
      </p>
      <p class="m-0 text-center text-white"><a href="mailto:feedback@covid-updates.ca">feedback@covid-updates.ca</a>
      </p>
    </div>
    <hr>
    <% end %>

    <% if false %>
    <div class="col-md-12">
      <!-- Modal -->
