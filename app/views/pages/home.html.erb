<% content_for :head do %>
<title>Canadian COVID-19 (Novel Coronavirus) Daily Briefings and Resources</title>
<meta property="og:url" content="https://www.covid-updates.ca/" />
<meta property="og:title" content="Canadian COVID-19 (Novel Coronavirus) Daily Briefings and Resources" />
<meta property="og:description"
  content="Watch the latest daily breifing held by the Provincial Health Authorities or the Government of Canada." />
<meta property="og:image" content="<%= image_url('opengraph2.png') %>" />
<meta name="viewport" content="width=device-width, initial-scale=1">

<% end %>


<div id="fb-root"></div>
<script async defer crossorigin="anonymous"
  src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v6.0&appId=3276604539040033&autoLogAppEvents=1"></script>

<% if true %>
<!-- Navigation -->
<%= render partial: 'navbar', locals: { active: 'PHB' } %>
<% end %>

<main>
<!-- Header -->
<header class="bg-primary py-5 mb-5">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-lg-12">
        <h1 class="display-4 text-white mt-4 mb-1">Stay Informed. Save Lives.</h1>
        <p class="lead mb-5 text-white-50">Watch the latest COVID-19 Public Daily Briefings for Alberta, British
          Columbia, Ontario and any National briefings. This site will post unedited videos of the latest news
          conference
          held by the Provincial Health Authorities or the Government of Canada. Check out the Resources page for a
          curated list of science backed resources.</p>
      </div>
    </div>
  </div>
</header>

<!-- Page Content -->
<div class="container">

  <div class="row">
    <% Category.where(kind: 'daily_update').order(:priority).each do |category| %>
      <div class="col-md-12">
        <h2><%= link_to category.name, region_home_path(category.slug) %></h2>
      </div>

      <% category.resources.by_date.first(3).each do |resource| %>
        <%= render partial: 'resource-card', locals: { resource: resource } %>
      <% end %>
    <% end %>
  </div>
  <!-- /.row -->

  <% if true %>
  <hr>
  <div class="col-md-12">
    <h2>Want to Help?</h2>
    <p>
      Right now I'm building and maintaining this site as a free solo side project. Updates are limited to
      AB/BC/ON/National Updates
      right now as I live in Vancouver, and only have time to update this content. However, It would be helpful to have
      someone from each province updating their content. The intention is to provide this site free of charge as a
      community resource.
    </p>
    <p>
      I am looking for people who can help build content and responsibly promote the site.
    </p>
    <p class="m-0 text-center text-white"><a href="mailto:feedback@covid-updates.ca">feedback@covid-updates.ca</a> </p>
  </div>
  <hr>
  <% end %>

  <% if false %>
  <div class="col-md-12">
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Subscribe</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- Begin Mailchimp Signup Form -->
            <link href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css">
            <style type="text/css">
              #mc_embed_signup {
                background: #fff;
                clear: left;
                font: 14px Helvetica, Arial, sans-serif;
              }

              /* Add your own Mailchimp form style overrides in your site stylesheet or in this style block.
We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
            </style>
            <div id="mc_embed_signup">
              <form
                action="https://matsuba.us15.list-manage.com/subscribe/post?u=cf8c4bbf5fab55beb7426a6db&amp;id=e1ffcd1c60"
                method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate"
                target="_blank" novalidate>
                <div id="mc_embed_signup_scroll">
                  <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
                  <div class="mc-field-group">
                    <label for="mce-EMAIL">Email Address <span class="asterisk">*</span>
                    </label>
                    <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
                  </div>
                  <div class="mc-field-group input-group">
                    <strong>Get Notifications For </strong>
                    <ul>
                      <li><input type="checkbox" value="2" name="group[12945][2]" id="mce-group[12945]-12945-0"><label
                          for="mce-group[12945]-12945-0">Gov of Canada</label></li>
                      <li><input type="checkbox" value="4" name="group[12945][4]" id="mce-group[12945]-12945-1"><label
                          for="mce-group[12945]-12945-1">Alberta</label></li>
                      <li><input type="checkbox" value="8" name="group[12945][8]" id="mce-group[12945]-12945-2"><label
                          for="mce-group[12945]-12945-2">British Columbia</label></li>
                      <li><input type="checkbox" value="16" name="group[12945][16]" id="mce-group[12945]-12945-3"><label
                          for="mce-group[12945]-12945-3">Ontario</label></li>
                    </ul>
                  </div>
                  <div id="mce-responses" class="clear">
                    <div class="response" id="mce-error-response" style="display:none"></div>
                    <div class="response" id="mce-success-response" style="display:none"></div>
                  </div>
                  <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                  <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text"
                      name="b_cf8c4bbf5fab55beb7426a6db_e1ffcd1c60" tabindex="-1" value=""></div>

                </div>

            </div>

            <!--End mc_embed_signup-->
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe"
                class="button btn btn-primary"></div>
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>
  <% end %>


  <h2>Discussion/Comments</h2>
  <div id="disqus_thread"></div>
  <script>

    var disqus_config = function () {
      this.page.url = 'https://www.covid-updates.ca/';
      this.page.identifier = 'home';
    };

    (function () { // DON'T EDIT BELOW THIS LINE
      var d = document, s = d.createElement('script');
      s.src = 'https://covidupdates.disqus.com/embed.js';
      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
    })();
  </script>

  <% if false %>
  <div class="col-md-4">
    <p>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Get Emailed When A New Video Is Posted
      </button>
    </p>
  </div>
  <% end %>

</div>
<!-- /.container -->
</main>

<!-- Footer -->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">We are in this together.</p>
    <p class="m-0 text-center text-white"><a href="mailto:feedback@covid-updates.ca">feedback@covid-updates.ca</a> </p>
    <p>
      <div class="fb-share-button" data-href="https://www.covid-updates.ca/" data-layout="button_count"
        data-size="large"><a target="_blank"
          href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.covid-updates.ca%2F&amp;src=sdkpreparse"
          class="fb-xfbml-parse-ignore">Share</a></div>
    </p>
  </div>
  <!-- /.container -->
</footer>



